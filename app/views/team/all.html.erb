<div class="row">
	<div class="col-xs-12">
		<div class='center'>
			<h3>Heard a term at Salesforce you didn't recognize?</span></h3>
		</div>
	</div>
</div>

<div class="row">
	<div class="col-xs-12">
		<div id="search">
			<%= render :partial => 'welcome/search' %>
		</div>
	</div>
</div>

<div class="row">
	<div class="col-xs-12">
		<div class="logo_pad">
			<%= image_tag 'logo2.png', :size => '180x113' %>
		</div>	
	</div>
</div>

<div class="row">
	<div class="col-xs-12">
		<marquee behavior="scroll" direction="left">Next team volunteer event is August 4th... </marquee>
	</div>
</div>

<div class="row">
	<div class="col-xs-12">
		<div class="center">
			<div class="toggleClick">
				<a id="displayText" class="clicky" href="javascript:toggle();">ESMB Central Solution Engineers <span class="glyphicon glyphicon-info-sign"></span></a>
			</div>
			<div id="toggleText" style="display: none">
				<div class="row">
					<div class="col-xs-3">
					</div>
					<div class="col-xs-6">
						<div id="team-list">
							<% @teams.each do |team| %>
								<table>
								<tr>
									<td><img src=/<%= team.photo %>></td>
									<td><%= team.first_name %> <%= team.last_name %></td>
									<td><a href='<%= team.url %>' target="_blank">Org62 Profile →</a></td>
										<td>
										<% case team.yoda when false %>
										<% when true %>
											<img src='/yoda_star_wars.gif' class='yoda' />
										<% end %>
										</td>
								</tr>
								</table>
							<% end %>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>	


<div class="col-xs-3">
</div>
<div class="col-xs-6">
	<marquee behavior="scroll" direction="up" scrollamount="2" style="height:150px;">
